{
    "name": "@sb1/ffe-core",
    "version": "31.1.2",
    "description": "Rammeverk for Felles Front End",
    "license": "MIT",
    "author": "SpareBank 1",
    "files": [
        "types",
        "lib",
        "less",
        "css"
    ],
    "main": "./lib/index.cjs",
    "module": "./lib/index.js",
    "type": "module",
    "types": "types/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./lib/index.cjs"
        }
    },
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "ssh://git@github.com:SpareBank1/designsystem.git"
    },
    "scripts": {
        "lint": "ffe-buildtool stylelint less/*.less",
        "test": "npm run lint",
        "clean": "rimraf css lib gen-src",
        "generate-semantic-colors": "./scripts/generate-semantic-colors.cjs",
        "build": "npm run generate-semantic-colors && ./scripts/build.cjs tokens.config.cjs && ./scripts/build-custom-mq.cjs less/breakpoints.less css/custom-media-queries.css && lessc --include-path=../node_modules less/ffe.less css/ffe.css --autoprefix",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@sb1/ffe-buildtool": "^0.10.0",
        "case": "^1.5.5",
        "less": "^4.1.2",
        "postcss": "^8.3.6"
    },
    "publishConfig": {
        "access": "public"
    }
}
