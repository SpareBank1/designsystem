{
    "extends": ["./linting/eslint-config-ffe/index.js", "prettier"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "no-use-before-define": 0,
      "@typescript-eslint/no-use-before-define": [2]
    },
    "overrides": [
        {
            "files": ["**/*.spec.js", "**/*.spec.tsx",  "**/*.spec.ts"],
            "env": {
                "jest": true
            },
            "globals": {
                "shallow": "readonly",
                "mount": "readonly",
                "render": "readonly"
            }
        }
    ]
}
