{
    "name": "@sb1/ffe",
    "version": "1.0.0",
    "description": "Felles Front End",
    "author": "SpareBank 1",
    "license": "SEE LICENSE IN README.md",
    "private": true,
    "scripts": {
        "clean": "run-s clean:lib clean:lerna",
        "clean:icons": "lerna clean --scope ffe-icons-react",
        "clean:lib": "rimraf packages/*/lib",
        "clean:lerna": "lerna clean --yes",
        "prettier": "pretty-quick --staged",
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "postinstall": "npm run bootstrap",
        "bootstrap": "lerna bootstrap",
        "build": "lerna run build && npm run build:css:ffe",
        "build:htdocs": "run-s build:packages build:css:* build:assets build:content build:styleguidist",
        "build:assets": "cp -r src/assets/ dist/",
        "build:css:ffe": "lessc packages/ffe-all.less dist/ffe.css",
        "build:css:styles": "lessc src/styles/styles.less dist/styles.css",
        "build:packages": "lerna run build",
        "build:content": "node bin/build-content.js",
        "build:styleguidist": "styleguidist build",
        "lint": "lerna run --parallel lint",
        "start": "run-s build:packages build:css:* build:content styleguidist:server",
        "styleguidist": "styleguidist",
        "styleguidist:server": "styleguidist server",
        "styleguidist:build": "styleguidist build",
        "test": "jest",
        "test:ci": "jest --ci --coverage && cat ./coverage/lcov.info | coveralls && rimraf ./coverage",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@commitlint/cli": "^5.2.5",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.2.1",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-3": "^6.24.1",
        "case": "^1.5.4",
        "coveralls": "^3.0.0",
        "css-loader": "^0.28.7",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint": "^4.13.1",
        "eslint-config-prettier": "^2.9.0",
        "handlebars": "^4.0.11",
        "husky": "^0.14.3",
        "jest": "^22.4.0",
        "lerna": "^2.8.0",
        "less": "^2.7.3",
        "less-loader": "^4.0.5",
        "less-plugin-autoprefix": "^1.5.1",
        "marked": "^0.3.15",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.1.2",
        "prettier": "^1.10.2",
        "pretty-quick": "^1.4.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-scrollspy": "^3.3.5",
        "react-styleguidist": "^6.0.32",
        "rimraf": "^2.6.2",
        "style-loader": "^0.19.1",
        "stylelint-config-prettier": "^2.0.0",
        "webpack": "^3.8.1"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "./test-setup.js"
    }
}
