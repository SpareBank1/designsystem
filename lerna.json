{
    "packages": [
        "packages/*",
        "linting/*",
        "buildtool/",
        "component-overview/"
    ],
    "npmClient": "npm",
    "version": "independent",
    "hoist": true,
    "command": {
        "publish": {
            "allowBranch": "main",
            "conventionalCommits": true,
            "ignoreChanges": [
                ".eslintrc",
                ".gitattributes",
                ".gitignore",
                ".npmignore",
                ".npmrc",
                "*.md",
                "*.spec.js",
                "test-setup.js",
                "ffe-header/images/logo-*.svg"
            ],
            "message": "chore(release): publish"
        }
    }
}
