{
    "packages": ["packages/*", "linting/*", "buildtool"],
    "npmClient": "npm",
    "version": "100.8.1",
    "command": {
        "publish": {
            "allowBranch": "main",
            "conventionalCommits": true,
            "ignoreChanges": [
                ".eslintrc",
                ".gitattributes",
                ".gitignore",
                ".npmignore",
                ".npmrc",
                "*.md",
                "*.spec.js",
                "test-setup.js",
                "ffe-header/images/logo-*.svg"
            ],
            "message": "chore(release): publish"
        }
    },
    "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
